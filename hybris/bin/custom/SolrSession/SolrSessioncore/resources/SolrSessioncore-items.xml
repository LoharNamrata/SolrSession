<items xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="items.xsd">

    <collectiontypes>
        <collectiontype code="GenderList" elementtype="Gender" autocreate="true" generate="true" type="list"/>
        <collectiontype code="SwatchColorSet" elementtype="SwatchColorEnum" autocreate="true" generate="true"
                        type="set"/>
        <collectiontype code="PriorList" elementtype="java.lang.Integer" autocreate="true" generate="true" type="list"/>
    </collectiontypes>

    <enumtypes>
        <enumtype generate="true" code="SwatchColorEnum" autocreate="true" dynamic="true">
            <value code="BLACK"/>
            <value code="BLUE"/>
            <value code="BROWN"/>
            <value code="GREEN"/>
            <value code="GREY"/>
            <value code="ORANGE"/>
            <value code="PINK"/>
            <value code="PURPLE"/>
            <value code="RED"/>
            <value code="SILVER"/>
            <value code="WHITE"/>
            <value code="YELLOW"/>
        </enumtype>
        
        <enumtype generate="true" code="RewardStatusLevel" autocreate="true" dynamic="true">
            <value code="SILVER"/>
            <value code="BLUE"/>
            <value code="GOLD"/>
        </enumtype>
    </enumtypes>
    
    <relations>
    	<relation code="Rental2ProductRel" localized="false" generate="true" autocreate="true">
	        <sourceElement type="Rental" qualifier="rentalPro" cardinality="one">
	            <modifiers read="true" write="true" search="true" optional="false"/>
	        </sourceElement>
	        <targetElement type="Product" qualifier="proRental" cardinality="many">
	            <modifiers read="true" write="true" search="true" optional="true" partof="true"/>
	        </targetElement>
	    </relation>
	    
	    <relation code="Rental2CustomerRel" localized="false" generate="true" autocreate="true">
	        <sourceElement type="Customer" qualifier="rentalCustomer" cardinality="one">
	            <modifiers read="true" write="true" search="true" optional="false"/>
	        </sourceElement>
	        <targetElement type="Rental" qualifier="rentalCust" cardinality="many">
	            <modifiers read="true" write="true" search="true" optional="true" partof="true"/>
	        </targetElement>
	    </relation>
    </relations>

    <itemtypes>

        <!-- Add your item definitions here -->

        <!-- TypeGroups are for structure of this file only -->
         <typegroup name="Book">
	         <itemtype code="BookProduct" extends="Product"
	                      autocreate="true" generate="true"
	                      jaloclass="com.solrsession.core.jalo.BookProduct">
	                <description>Base apparel product extension that contains additional attributes.</description>
	                <attributes>
	                    <attribute qualifier="edition" type="java.lang.String">
	                        <description>List of genders that the ApparelProduct is designed for</description>
	                        <modifiers/>
	                        <persistence type="property"/>
	                    </attribute>
	                    <attribute qualifier="publication" type="java.lang.Integer">
	                        <modifiers/>
	                        <persistence type="property"/>
	                    </attribute>	            
	                </attributes>
	       </itemtype>
	       
	       <itemtype code="Rental" extends="GenericItem"
                      autocreate="true" generate="true"
                      jaloclass="com.solrsession.core.jalo.Rental">
                <description>Base apparel product extension that contains additional attributes.</description>
                <deployment table="Rental" typecode="10001"/>
                <attributes>
                    <attribute qualifier="rentalID" type="java.lang.Integer">
                        <modifiers/>
                        <persistence type="property"/>
                    </attribute>
                    <attribute qualifier="startDate" type="java.util.Date">
                        <modifiers/>
                        <persistence type="property"/>
                    </attribute>
                    <attribute qualifier="endDate" type="java.util.Date">
                        <modifiers/>
                        <persistence type="property"/>
                    </attribute>
                </attributes>
            </itemtype>
            
            <itemtype code="RewardStatusLevelConfig" extends="GenericItem"
                      autocreate="true" generate="true"
                      jaloclass="com.solrsession.core.jalo.RewardStatusLevelConfig">
                <description>Base apparel product extension that contains additional attributes.</description>
                <deployment table="RewardStatusLevelConfig" typecode="10002"/>
                <attributes>
                    <attribute qualifier="configID" type="java.lang.String">
                        <modifiers/>
                        <persistence type="property"/>
                    </attribute>
                    <attribute qualifier="threshold" type="java.lang.Integer">
                        <modifiers/>
                        <persistence type="property"/>
                    </attribute>
                    <attribute qualifier="image" type="Media">
                        <modifiers/>
                        <persistence type="property"/>
                    </attribute>
                    <attribute qualifier="rewardStatusLevel" type="RewardStatusLevel">
                        <modifiers/>
                        <persistence type="property"/>
                    </attribute>
                </attributes>
            </itemtype>
            
         </typegroup>
        

        <typegroup name="Apparel">
            <itemtype code="ApparelProduct" extends="Product"
                      autocreate="true" generate="true"
                      jaloclass="com.solrsession.core.jalo.ApparelProduct">
                <description>Base apparel product extension that contains additional attributes.</description>
                <attributes>
                    <attribute qualifier="genders" type="GenderList">
                        <description>List of genders that the ApparelProduct is designed for</description>
                        <modifiers/>
                        <persistence type="property"/>
                    </attribute>
                    <attribute qualifier="prior" type="java.lang.Integer">
                        <modifiers/>
                        <persistence type="property"/>
                    </attribute>
                    <attribute qualifier="priorList" type="PriorList">
                        <modifiers/>
                        <persistence type="property"/>
                    </attribute>
                </attributes>
            </itemtype>

            <itemtype code="ApparelStyleVariantProduct" extends="VariantProduct"
                      autocreate="true" generate="true"
                      jaloclass="com.solrsession.core.jalo.ApparelStyleVariantProduct">
                <description>Apparel style variant type that contains additional attribute describing variant style.
                </description>
                <attributes>
                    <attribute qualifier="style" type="localized:java.lang.String"
                               metatype="VariantAttributeDescriptor">
                        <description>Color/Pattern of the product.</description>
                        <modifiers/>
                        <persistence type="property"/>
                    </attribute>

                    <attribute qualifier="swatchColors" type="SwatchColorSet">
                        <description>A normalized color mapping to a standardized front-end navigable name.
                        </description>
                        <modifiers/>
                        <persistence type="property"/>
                    </attribute>
                </attributes>

            </itemtype>

            <itemtype code="ApparelSizeVariantProduct" extends="ApparelStyleVariantProduct"
                      autocreate="true" generate="true"
                      jaloclass="com.solrsession.core.jalo.ApparelSizeVariantProduct">
                <description>Apparel size variant type that contains additional attribute describing variant size.
                </description>
                <attributes>
                    <attribute qualifier="size" type="localized:java.lang.String"
                               metatype="VariantAttributeDescriptor">
                        <description>Size of the product.</description>
                        <modifiers/>
                        <persistence type="property"/>
                    </attribute>
                </attributes> 
            </itemtype>
        </typegroup>

        <typegroup name="Electronics">
            <itemtype code="ElectronicsColorVariantProduct" extends="VariantProduct"
                      autocreate="true" generate="true"
                      jaloclass="com.solrsession.core.jalo.ElectronicsColorVariantProduct">
                <description>Electronics color variant type that contains additional attribute describing variant color.
                </description>
                <attributes>
                    <attribute qualifier="color" type="localized:java.lang.String"
                               metatype="VariantAttributeDescriptor">
                        <description>Color of the product.</description>
                        <modifiers/>
                        <persistence type="property"/>
                    </attribute>
                </attributes>
            </itemtype>
            
        </typegroup>

    </itemtypes>
</items>
